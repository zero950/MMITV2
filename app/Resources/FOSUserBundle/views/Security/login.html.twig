{% extends "FOSUserBundle::security.html.twig" %}

{#{% trans_default_domain 'FOSUserBundle' %}#}

{#{% block fos_user_content %}#}
{#{% if error %}#}
    {#<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
{#{% endif %}#}

{% block title %}
    {{ parent() }} - Login
{% endblock %}

{% block custom_style %}
    {% stylesheets 'bundles/mmitv/css/login.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}



{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="logo">
        <a href="{{ path('direct') }}">
            <h1>MMI <span>TV</span></h1>
        </a>
    </div>
    <div class="container">
        <div class="login">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <i class="fa fa-user"></i>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Identifiant"/>
                <br>

                <i class="fa fa-lock"></i>
                <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>
                <br>
                {#<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Se souvenir de moi</label>
                <br>#}
                <input type="submit" class="submit" id="_submit" name="_submit" value="Connexion" />
            </form>
        </div>
    </div>
{% endblock %}